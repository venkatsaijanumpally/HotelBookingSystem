	</parent>
	<groupId>com.hotel</groupId>
	<artifactId>elastic-hotel-sync-service</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>elastic-hotel-sync-service</name>
	<description>ElasticSearch Hotel Syncronization Service</description>
	<properties>
		<java.version>17</java.version>
	</properties>
	<dependencies>
